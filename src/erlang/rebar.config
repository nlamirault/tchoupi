%%-------------------------------------------------------------------
%% General options
%%-------------------------------------------------------------------

{require_otp_vsn, "19"}.

{erl_opts, [
            warn_export_vars,
            warn_shadow_vars,
            warn_obsolete_guard,
            warn_unused_import,
            warnings_as_errors,
            fail_on_warning,
            {parse_transform, lager_transform},
            debug_info]}.

%%-------------------------------------------------------------------
%% Plugins
%%-------------------------------------------------------------------

{plugins, [
           rebar3_run,
           rebar3_vendor
]}.


%%-------------------------------------------------------------------
%% Dependencies
%%-------------------------------------------------------------------


{deps, [
        {jsx, "2.8.0"},
        {lager, "3.2.1"},
        {cowboy, "1.0.4"}
       ]}.


%%-------------------------------------------------------------------
%% Testing
%%-------------------------------------------------------------------

{cover_enabled, true}.

{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.

%%-------------------------------------------------------------------
%% Profiles
%%-------------------------------------------------------------------


{profiles, [
            {prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            },
            {test, [{deps, [
                             {meck, "0.8.4"},
                             {erl_opts, [debug_info]}
                          ]}
                  ]}
           ]
}.

%%-------------------------------------------------------------------
%% RELx
%%-------------------------------------------------------------------

{relx, [{release, { tchoupi, "0.1.0" }, [
                                         tchoupi,
                                         sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.
