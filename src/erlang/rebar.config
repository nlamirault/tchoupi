{erl_opts, [debug_info]}.
{plugins, [
           rebar3_run,
           rebar3_vendor
]}.
{deps, [
        {cowboy, "1.0.4"}
       ]}.

{relx, [{release, { tchoupi, "0.1.0" },
         [tchoupi,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [
            {prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            },
            {test, [{deps, [
                             {meck, "0.8.4"},
                             {erl_opts, [debug_info]}
                          ]}
                  ]}
           ]
}.
